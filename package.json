{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "turbo dev",
    "lint": "turbo lint --",
    "format": "prettier --write '{apps,packages}/**/*.{js,jsx,ts,tsx,json,md}'",
    "build": "turbo build",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/*",
    "apps/*",
    "shared-configs/*"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  }
}
